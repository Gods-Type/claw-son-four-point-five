# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Development Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/claw_son_dev
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/claw_son_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-here
API_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=claw_son_experiments

# Weights & Biases Configuration
WANDB_PROJECT=claw_son_four_point_five
WANDB_ENTITY=your-wandb-entity

# Jupyter Configuration
JUPYTER_PORT=8888
JUPYTER_TOKEN=your-jupyter-token

# Education Platform Configuration
EDUCATION_PLATFORM_URL=http://localhost:3000
EDUCATION_API_URL=http://localhost:8000

# File Storage
DATA_DIR=./data
MODELS_DIR=./models
LOGS_DIR=./logs

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Research Configuration
PAPERS_DIR=./research/papers
ANALYSIS_OUTPUT_DIR=./research/analysis/outputs

# External APIs
OPENAI_API_KEY=your-openai-api-key
GITHUB_TOKEN=your-github-token

# Docker Configuration
COMPOSE_PROJECT_NAME=claw_son_dev

# Monitoring
SENTRY_DSN=your-sentry-dsn